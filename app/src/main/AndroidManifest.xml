<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
<uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/flash"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Formula"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.AboutActivity"
            android:exported="false"
            android:theme="@style/Theme.Formula" />
        <activity
            android:name=".ui.Test"
            android:exported="false"
            android:theme="@style/Theme.Formula" />

        <receiver
            android:name=".ui.NetworkChangeListener"
            android:exported="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ui.Second"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <!--
activity
            android:name=".ui.second"
            android:exported="false"
            android:theme="@style/Theme.Formula" /
        -->
        <service
            android:name=".ui.MyFirebaseMessagingService"
            android:exported="false" />


        <activity
            android:name=".ui.SlashScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Formula.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".ui.NetworkChangeListener"
            android:exported="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <receiver android:name=".MainActivity" />
    </application>

</manifest>